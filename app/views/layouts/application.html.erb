<!DOCTYPE html>
<html>
  <head>
    <title>Scoop</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <script type="text/javascript">
      window.logoURL = "<%= image_url('logo.jpg') %>";
      window.mainURL = "<%= image_url('main.jpg') %>";
      window.signupURL = "<%= image_url('signin.jpg') %>";
      window.newsURL = "<%= image_url('news.jpg') %>";
      window.squareURL = "<%= image_url('square.jpg') %>";
      window.errorURL = "<%= image_url('error.jpg') %>";


    </script>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
